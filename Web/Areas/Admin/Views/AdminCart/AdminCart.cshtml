@model List<Web.Models.DonHang>
@using Web.Models
@{
    Model1 db1 = new Model1();
    ViewBag.Title = "AdminCart";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main class="page-content">
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="/Admin/AdminHome/Index"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Tất cả đơn hàng</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Chủ đơn hàng</th>
                        <th>Ngày đặt</th>
                        <th>Giá trị đơn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var it in Model)
                    {
                        var kh = db1.KhachHangs.Where(x => x.MaKH == it.MaKH).FirstOrDefault();
                        <tr>
                            @*<td><input class="form-check-input" type="checkbox"></td>*@
                            <td>@it.MaDon</td>
                            <td>@kh.TenKH</td>
                            <td>@it.NgayDatDon</td>
                            <td>@it.TongTien</td>
                            <td>
                                <div class="d-flex align-items-center gap-3 fs-6">
                                    <a href="/Admin/AdminCart/DetailOder/@it.MaDon" class="text-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="View detail" aria-label="Views"><i class="bi bi-eye-fill"></i></a>
                                    <a href="javascript:;" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Edit info" aria-label="Edit"><i class="bi bi-pencil-fill"></i></a>
                                    <a href="javascript:;" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="" data-bs-original-title="Delete" aria-label="Delete"><i class="bi bi-trash-fill"></i></a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <nav class="float-end mt-0" aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</main>
