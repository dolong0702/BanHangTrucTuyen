
@{
    ViewBag.Title = "DetalKH";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!--start content-->
<main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết khách hàng</li>
                </ol>
            </nav>
        </div>
    </div>
    <!--end breadcrumb-->


    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-0">Thông tin tài khoản</h5>
                    <hr>
                    <div class="card shadow-none border">
                        <div class="card-header">
                            <h6 class="mb-0">USER INFORMATION</h6>
                        </div>
                        <div class="card-body">
                            <form class="row g-3">
                                <div class="col-6">
                                    <label class="form-label">Mã khách hàng</label>
                                    <input type="text" id="makh" class="form-control" value="@ViewBag.makh">
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Tên khách hàng</label>
                                    <input type="text" id="ten" class="form-control" value="@ViewBag.tenkh">
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Ngày sinh</label>
                                    <input type="text" id="ngaysinh" class="form-control" value="@ViewBag.ngaysinh">
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Số CMT/CCCD</label>
                                    <input type="text" id="cancuoc" class="form-control" value="@ViewBag.cc">
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Số điện thoại</label>
                                    <input type="text" id="sodienthoai" class="form-control" value="@ViewBag.sdt">
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Mật khẩu</label>
                                    <input type="text" class="form-control" value="@ViewBag.mk">
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card shadow-none border">
                        <div class="card-header">
                            <h6 class="mb-0">Thông tin liên hệ</h6>
                        </div>
                        <div class="card-body">
                            <form class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Địa chỉ</label>
                                    <input type="text" id="diachi" class="form-control" value="@ViewBag.dt">
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Gmail</label>
                                    <input type="text" class="form-control" value="Chưa thêm cột trong csdl">
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="text-start">
                        <button type="button" class="btn btn-primary px-4" onclick="SaveDetalKH('@Request.RawUrl')">Lưu thay đổi</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm border-0 overflow-hidden">
                <div class="card-body">
                    <div class="profile-avatar text-center">
                        <img src="assets/images/avatars/avatar-1.png" class="rounded-circle shadow" width="120" height="120" alt="">
                    </div>
                    <div class="d-flex align-items-center justify-content-around mt-5 gap-3">
                        <div class="text-center">
                            <h4 class="mb-0">45</h4>
                            <p class="mb-0 text-secondary">Số đơn hàng</p>
                        </div>
                        <div class="text-center">
                            <h4 class="mb-0">15</h4>
                            <p class="mb-0 text-secondary">Photos</p>
                        </div>
                        <div class="text-center">
                            <h4 class="mb-0">86</h4>
                            <p class="mb-0 text-secondary">Số Comments</p>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <h4 class="mb-1">@ViewBag.tenkh</h4>
                        <p class="mb-0 text-secondary">@ViewBag.dt</p>
                        <div class="mt-4"></div>
                        <h6 class="mb-1">Gmail</h6>
                        <p class="mb-0 text-secondary">Chưa có gmail</p>
                    </div>
                    <hr>
                </div>
                @*<ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent border-top">
                        Followers
                        <span class="badge bg-primary rounded-pill">95</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent">
                        Following
                        <span class="badge bg-primary rounded-pill">75</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent">
                        Templates
                        <span class="badge bg-primary rounded-pill">14</span>
                    </li>
                </ul>*@
            </div>
        </div>
    </div><!--end row-->

</main>
<script>
    function SaveDetalKH(url) {
        var makh = $('#makh').val();
        var ten = $('#ten').val();
        var ngaysinh = $('#ngaysinh').val();
        var sdt = $('#sodienthoai').val();
        var diachi = $('#diachi').val();
        $.ajax({
            url: "/QLKhachHang/SaveChanges",
            type: "POST",
            data: {
                makh: makh,
                ten: ten,
                ngaysinh: ngaysinh,
                sdt: sdt,
                diachi: diachi,
                returnUrl: url
            },
            dataType: "json",
            success: function () {
                alert("thêm sản phẩm thành công");
            }
        });
        location.assign("/Admin/QLKhachHang/QLKH");
    }
</script>
<!--end page main-->
